<div class="container-fluid">
  <div class="row">
    <div class="jumbotron">

          <fieldset>

            <h1><%="#{title} categoria"%></h1>
            <%= form_with(model: category, local: true) do |form| %>
              <% if category.errors.any? %>
                <div id="error_explanation">
                  <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>

                  <ul>
                  <% category.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                  </ul>
                </div>
              <% end %>

              <div class="field">
                <%= form.label :name, class:"col-md-6 col-form-label" %>
                <%= form.text_field :name, class: "col-md-6 form-control" %>
              </div>

              <div class="field">
                <%= form.label :color,class: "col-md-6 col-form-label"%>
                <%= form.color_field :color, id: :category_color, class: "col-md-6 form-control" %>
              </div>

              <div class="actions">
                <%= form.submit %>
              </div>
              <%= link_to 'Show', @category %> |
              <%= link_to 'Back', categories_path %>

            <% end %>
          </fieldset>

      </div>
  </div>
</div>
