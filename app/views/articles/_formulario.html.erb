<div class="container-fluid">
  <div class="row">
    <div class="jumbotron">
        <form>
          <fieldset>

            <legend><%= "#{titulo} Articulo"%></legend>

            <%= form_with(model: @article) do |form| %>
            <div class="form-group">

            <%= form.label "Titulo", class:"col-md-6 col-form-label" %>
            <%= form.text_field :title, class:"col-md-6 form-control" %>
          </div>
            <div class="form-group">

            <%= form.label "Cuerpo", class:"col-md-6 col-form-label" %>
            <%= form.text_field :body , class:"col-md-6 form-control"%>
          </div>
            <div class="form-group">

            <%= form.submit "OK", class:"btn btn-info" %>
            <%= link_to "Atras", articles_path, class:"btn btn-info" %>
          </div>
            <% end %>
          </fieldset>
        </form>

      </div>
  </div>
</div>
